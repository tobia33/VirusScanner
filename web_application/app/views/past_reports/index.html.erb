<h1>PastReports#index</h1>

<%= link_to "sort by score", past_reports_path(sort: "score")  %>
<%= link_to "sort by date", past_reports_path(sort: "date")  %>

<ul>
  <% @single_reports.each do |past_report| %>
    <li>
    <a href="<%= report_path(past_report) %>">
      <%= past_report.score %>
      <%= past_report.sha256 %>
      <%= past_report.url %>
      <%= past_report.created_at %>
    </a>
    <%= link_to "[ Delete ]", report_path(past_report), data: {
                  turbo_method: :delete,
                } %>
    
    </li>
  <% end %>
</ul>
<ul>
  <% @groups.each do |group| %>
    <li>
    <a href="<%= group_path(group) %>">
      <%= group.file_name %>
      <%= group.created_at %>
    </a>
      <%= link_to "[ Delete ]", group_path(group), data: {
                    turbo_method: :delete,
                  } %>
    </li>
  <% end %>
</ul>
<%= link_to "home", reports_path  %>
